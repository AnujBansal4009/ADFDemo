{
	"name": "EmpSalesCountdataflow",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "EmpSalesData",
						"type": "DatasetReference"
					},
					"name": "source"
				}
			],
			"sinks": [
				{
					"dataset": {
						"referenceName": "GitOutputFolder_DataFlow",
						"type": "DatasetReference"
					},
					"name": "sink"
				}
			],
			"transformations": [
				{
					"name": "QuatersalesCount"
				}
			],
			"scriptLines": [
				"source(output(",
				"          EmployeeID as string,",
				"          Quarter as string,",
				"          Sales as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false) ~> source",
				"source aggregate(groupBy(Quarter),",
				"     totalSales = count(Sales)) ~> QuatersalesCount",
				"QuatersalesCount sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     partitionFileNames:['EmpSalesCount.csv'],",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true,",
				"     mapColumn(",
				"          Quarter,",
				"          totalSalesPerQuarter = totalSales",
				"     ),",
				"     partitionBy('hash', 1)) ~> sink"
			]
		}
	}
}